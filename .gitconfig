[alias]
	co = checkout
	br = branch
	st = status
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold yellow)%h%C(reset) - %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'  
	ignore = update-index --assume-unchanged
	notignore = update-index --no-assume-unchanged
